{
	"manifest_version": 2,

	"name":"Pandora-Spotify Synchronizer",
	"description": "Whenever you like a song on Pandora, this extension adds it to your Spotify starred playlist.",
	"version": "1.0",

	"background": {
		"scripts": ["jquery.min.js", "backgroung.js"],
		"persistent": false
	},

	"permissions": [
		"activeTab",
		"storage",
		"identity",
		"https://api.spotify.com/*"
	],

	"content_scripts": [
		{
			"matches": ["http://www.pandora.com/*"],
			"js": ["jquery.min.js", "syncher.js"]
		}
	]
}
